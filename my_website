<body>
  <h1>üå∏ Flower Finder üåº</h1>
  <div class="flower-bar">
    <input type="text" id="searchInput" placeholder="Type a flower name (e.g., rose, tulip)...">
    <button onclick="searchFlower()">Search</button>
  </div>
  <div class="flower-result" id="flowerResult"></div>

  <script>
    const flowers = {
